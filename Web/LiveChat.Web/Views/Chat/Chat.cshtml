@{
    this.ViewBag.Title = "Chat";
}

<h1>@this.ViewBag.Title</h1>

<div class="container">
    <div id="message-holder" class="mt-3 d-flex justify-content-start">
        <h4>Message</h4>
        <input class="w-75 ml-4 pl-3" type="text" id="messageInput" placeholder="Message..." />
        <button id="sendButton" class="ml-4 btn btn-dark btn-lg">Send</button>
        <button id="loadHistoryButton" class="ml-4 btn btn-dark btn-lg">Load History</button>
        <button id="getAllParticipants" class="ml-4 btn btn-dark btn-lg">Load Chat Members</button>
    </div>
    <hr style="height: 5px;" class="bg-dark" />
    <div id="notificationsList" style="font-size: 28px;"></div>
    <div id="messagesList" style="font-size: 28px;"></div>
</div>
@section Scripts {
    <script src="~/js/site.js"></script>
    <script src="~/lib/signalr/dist/browser/signalr.min.js"></script>
}